        <div class="field-group">
            <label for="limite_original">Lim.Original</label>
            <input required="required" class="dinheiro" type="text" name="limite_original" {% if client.limite_original !='' %} value="{{ client.limite_original }}" {% endif %}>
        </div>

        <div class="field-group">
            <label for="tipo_cliente">Tipo de Cliente</label>
