<!-- Segundo campo -->
<div class="field-form">

    <div class="field-container">

        <div class="field-grid">
            <div class="field-group">
                <label for="regime_tributario">Regime Tributário</label>
                <select required="required" name="regime_tributario">

                    <option value="Simples Nacional" {% if client.regime_tributario =='Simples Nacional' %} selected="selected" {% endif %}>
                        Simples Nacional
                    </option>

                    <option value="Lucro Presumido" {% if client.regime_tributario =='Lucro Presumido' %} selected="selected" {% endif %}>
                        Lucro Presumido
                    </option>

                    <option value="Lucro Real" {% if client.regime_tributario =='Lucro Real' %} selected="selected" {% endif %}>
                        Lucro Real
                    </option>

                </select>
            </div>
            <div class="field-group">
                <label for="cnpj">CNPJ</label>
                <input class="cnpj" required="required" type="text" name="cnpj" {% if client.cnpj !=null %} value="{{ client.cnpj }}" {% endif %}>
            </div>
        </div>

        <div class="field-grid">
            <div class="field-group">
                <label for="inscricao_estadual">Inscr.Estadual</label>
                <input required="required" type="text" name="inscricao_estadual" {% if client.inscricao_estadual !=null %} value="{{ client.inscricao_estadual }}" {% endif %}>
            </div>
            <div class="field-group">
                <label for="fundacao">Fundação</label>
                <input required="required" type="date" max="{{ year }}-12-31" name="fundacao" {% if client.fundacao !=null %} value="{{ client.fundacao }}" {% endif %}>
            </div>
        </div>

        <div class="field-group">
            <fieldset>

                <legend>Tipo Pessoa</legend>

                <div class="fieldset-container">
                    <div class="content-fieldset">
                        <input class="radio" type="radio" id="pessoa_fisica" name="tipo_pessoa" value="Física" {% if client.tipo_pessoa !='Física' %} checked="checked" {% endif %}>
                        <label for="pessoa_fisica">Física</label>
                    </div>

                    <div class="content-fieldset">
                        <input class="radio" type="radio" id="pessoa_juridica" name="tipo_pessoa" value="Jurídica" {% if client.tipo_pessoa !='Jurídica' %} checked="checked" {% endif %}>
                        <label for="pessoa_juridica">Jurídica</label>
                    </div>
                </div>
            </fieldset>
        </div>

        <div class="field-group">
            <fieldset>

                <legend>Tipo Contribuinte</legend>

                <div class="fieldset-container big-field">
                    <div class="content-fieldset">
                        <input class="radio" type="radio" id="contribuinte" name="tipo_contribuinte" value="Contribuinte" {% if client.tipo_contribuinte !='Contribuinte' %} checked="checked" {% endif %}>
                        <label for="contribuinte">Contribuinte</label>
                    </div>
                    <div class="content-fieldset">
                        <input class="radio" type="radio" id="nao_contribuinte" name="tipo_contribuinte" value="Não Contribuinte" {% if client.tipo_contribuinte !='Não Contribuinte' %} checked="checked" {% endif %}>
                        <label for="nao_contribuinte">Não Contribuinte</label>
                    </div>
                    <div class="content-fieldset">
                        <input class="radio" type="radio" id="isento" name="tipo_contribuinte" value="Isento" {% if client.tipo_contribuinte !='Isento' %} checked="checked" {% endif %}>
                        <label for="isento">Isento</label>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>

<!-- Terceiro campo (correios)-->
<div class="field-form correios buttons">

    <div class="header-container">

        <a class="active">Endereço</a>
        <a>Cobrança</a>

        <div class="check-group">
            <div class="checkbox">
                <input class="checkbox" type="checkbox" name="permite_crediario" {% if client.permite_crediario=='Sim' %} checked="checked" {% endif %}>
                <label for="permite_crediario">Permite Venda Crédiario/Boleto</label>
            </div>

            <div class="checkbox">
                <input class="checkbox" type="checkbox" name="permite_cheque" {% if client.permite_cheque=='Sim' %} checked="checked" {% endif %}>
                <label for="permite_cheque">Permite Venda Cheque Pré</label>
            </div>
        </div>

        <img src="/icons/correios.png" alt="imagem correios">

    </div>
    <div class="correios-container" style="display: block;">

        <div class="field-container">

            <div class="field-group">
                <label for="endereco_cep">Cep</label>
                <input class="cep" required="required" type="text" name="endereco_cep" {% if client.endereco_cep !='' %} value="{{ client.endereco_cep }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="endereco_endereco">Endereço</label>
                <input required="required" type="text" name="endereco_endereco" {% if client.endereco_endereco !='' %} value="{{ client.endereco_endereco }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="endereco_numero">Número</label>
                <input required="required" type="number" name="endereco_numero" {% if client.endereco_numero !='' %} value="{{ client.endereco_numero }}" {% endif %}>
            </div>
        </div>

        <div class="field-container">

            <div class="field-group">
                <label for="endereco_bairro">Bairro</label>
                <input required="required" type="text" name="endereco_bairro" {% if client.endereco_bairro !='' %} value="{{ client.endereco_bairro }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="city">Cidade</label>
                <select required="required" name="city">
                    <option value="">Selecione a cidade</option>
                    {% if client.endereco_cidade != '' %}
                        <option value="{{ client.endereco_cidade }}" selected="selected">{{ client.endereco_cidade }}
                        </option>
                    {% endif %}
                </select>
            </div>

            <div class="field-group">
                <label for="endereco_codigo_nfe">Cd.NFe</label>
                <input required="required" type="text" name="endereco_codigo_nfe" {% if client.endereco_codigo_nfe !='' %} value="{{ client.endereco_codigo_nfe }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="state">UF</label>
                <select required="required" name="uf">

                    {% if client.endereco_estado != '' %}
                        <option value="{{ client.endereco_estado_id }}" selected="selected">{{ client.endereco_estado }}</option>
                        {% else%}
                        <option value="">Selecione a Região</option>
                    {% endif %}
                </select>
                <input type="hidden" name="state" {% if client.endereco_estado_id != '' %} value="{{ client.endereco_estado_id }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="endereco_proxima_revisao">Próx. revisão</label>
                <input required="required" type="date" max="{{ maxYear }}-12-31" name="endereco_proxima_revisao" {% if client.endereco_proxima_revisao !='' %} value="{{ client.endereco_proxima_revisao }}" {% endif %}>
            </div>
        </div>
    </div>
    <div class="correios-container" style="display: none;">

        <div class="field-container">

            <div class="field-group">
                <label for="cobranca_cep">Cep</label>
                <input class="cep" type="text" name="cobranca_cep" {% if client.cobranca_cep !='' %} value="{{ client.cobranca_cep }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="cobranca_endereco">Endereço</label>
                <input type="text" name="cobranca_endereco" {% if client.cobranca_endereco !='' %} value="{{ client.cobranca_endereco }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="cobranca_numero">Número</label>
                <input type="number" name="cobranca_numero" {% if client.cobranca_numero !='' %} value="{{ client.cobranca_numero }}" {% endif %}>
            </div>
        </div>

        <div class="field-container">

            <div class="field-group">
                <label for="cobranca_bairro">Bairro</label>
                <input type="text" name="cobranca_bairro" {% if client.cobranca_bairro !='' %} value="{{ client.cobranca_bairro }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="city">Cidade</label>
                <select name="city">
                    {% if client.cobranca_cidade != '' %}
                        <option value="{{ client.cobranca_cidade }}" selected="selected">{{ client.cobranca_cidade }}
                        </option>
                    {% else %}
                        <option value="">Selecione a cidade</option>
                    {% endif %}
                </select>
            </div>

            <div class="field-group">
                <label for="cobranca_codigo_nfe">Cd.NFe</label>
                <input type="text" name="cobranca_codigo_nfe" {% if client.cobranca_codigo_nfe !='' %} value="{{ client.cobranca_codigo_nfe }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="state">UF</label>
                <select name="uf">
                    {% if client.cobranca_estado != '' %}
                        <option value="{{ client.cobranca_estado_id }}" selected="selected">
                            {{ client.cobranca_estado }}
                        </option>
                    {% endif %}
                    <option value="">Selecione a Região</option>
                </select>
                <input type="hidden" name="state" {% if client.cobranca_estado_id != '' %} value="{{ client.cobranca_estado_id }}" {% endif %}>
            </div>

            <div class="field-group">
                <label for="cobranca_proxima_revisao">Próx. revisão</label>
                <input type="date" max="{{ maxYear }}-12-31" name="cobranca_proxima_revisao" {% if client.cobranca_proxima_revisao !='' %} value="{{ client.cobranca_proxima_revisao }}" {% endif %}>
            </div>
        </div>
    </div>
</div>

