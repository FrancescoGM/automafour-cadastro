            <input type="text" name="fax" {% if client.fax !='' %} value="{{ client.fax }}" {% endif %}>
        </div>

        <div class="field-group">
            <label for="email">Email</label>
            <input required="required" type="text" name="email" {% if client.email !='' %} value="{{ client.email }}" {% endif %}>
